#! /bin/sh
sudo cp -pfR /update/tmpi/etc/ /
sudo cp -pfR /update/tmpi/update /root
ver="$(uname -r)"          # get kernel release version, e.g., "3.10.34-1-MANJARO"
ver="${ver%.*-*}"        # remove suffix starting with '.' and containing '-'
ver="${ver%.*-*}"        # remove suffix starting with '.' and containing '-'
#ver="${ver//.}"          # remove periods (a single `/` would do here)
echo "$ver"
b="4.20"
echo "$b"
if [ "$ver" \< "$b" | bc];
then
cd /update/tmpi/
echo "downloading new kernel...."
wget http://digitall.in.ua/linux-headers.deb 
wget http://digitall.in.ua/linux-image.deb
echo "update kernel, please wait....." 
dpkg -i *.deb
read -r -p "Kernel was updated! REBOOT??? [Y/n]" response
 response=${response,,} # tolower
 if [[ $response =~ ^(yes|y| ) ]] | [ -z $response ]; then
 sudo rm -R /update/tmpi && reboot
 fi
    exit 1;
 fi
 sudo rm -R /update/tmpi
    echo " you kernel is latest"   
    exit 1;
